  <script>
    const sections = document.querySelectorAll('main section, section.hero');
    const menu = document.getElementById('menu');
    const toast = document.getElementById('toast');

    function show(section){
      document.querySelectorAll('main section').forEach(s => s.classList.remove('active'));
      const el = document.getElementById(section) || document.getElementById('home');
      el.classList.add('active');
      menu.querySelectorAll('a').forEach(a=>a.classList.toggle('active', a.dataset.section===section));
      const y = document.querySelector('header').offsetHeight;
      window.scrollTo({top:y,behavior:'smooth'});
    }

    // menu links
    menu.addEventListener('click', (e)=>{
      if(e.target.matches('a[data-section]')){
        e.preventDefault();
        show(e.target.dataset.section);
      }
    });

    // quick actions/buttons
    document.body.addEventListener('click', (e)=>{
      const t = e.target.closest('[data-section]');
      if(t){ show(t.dataset.section); }
    });

    function demoLogin(type){
      pop(`Opening ${type==='ngo'?'NGO':'User'} login‚Ä¶ (demo)`);
    }

    function openApply(name){
      pop(`Adoption interest submitted for ${name} (demo)`);
    }

    function mockPay(kind){
      pop(`${kind} contribution recorded (demo)`);
    }

    // forms demo handlers
    ['rescueForm','abuseForm','lostForm'].forEach(id=>{
      const f = document.getElementById(id);
      if(f){ f.addEventListener('submit', e=>{ e.preventDefault(); pop('Submitted! (demo)'); }); }
    });

    // geotag filler for demo
    const geo = document.getElementById('geo');
    if(geo){ geo.value = 'Auto: 13.0351, 77.5970'; }

    function pop(msg){
      toast.textContent = msg;
      toast.style.display = 'block';
      toast.style.opacity = '1';
      setTimeout(()=>{ toast.style.opacity = '0'; }, 1600);
      setTimeout(()=>{ toast.style.display = 'none'; }, 2000);
    }
  </script>
